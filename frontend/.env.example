# ============================================
# Astra Protocol V7 - Environment Variables
# ============================================

# --------------------------------------------
# Database (Neon PostgreSQL)
# --------------------------------------------
# Get from: https://neon.tech
DATABASE_URL="postgres://user:password@host/database?sslmode=require"

# --------------------------------------------
# Solana Configuration
# --------------------------------------------
# Network: devnet | mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC Endpoint (Helius recommended for mainnet)
NEXT_PUBLIC_RPC_ENDPOINT=https://api.devnet.solana.com
# For mainnet: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# --------------------------------------------
# Program ID (Astra Protocol V7)
# Update this after deploying contracts
# --------------------------------------------
NEXT_PUBLIC_PROGRAM_ID=BONDcYHM1Ai7aXf6r7dDw4E9hrVvr5A72WBaWEAgNFGQ

# --------------------------------------------
# Pyth Oracle (SOL/USD Price Feed)
# --------------------------------------------
# Devnet SOL/USD price feed
NEXT_PUBLIC_PYTH_SOL_USD=7UV2aKwAbE5YUsFUpZgnN36xeaDc3EZM6iGLCgsHaNkA

# Mainnet SOL/USD price feed (uncomment for mainnet)
# NEXT_PUBLIC_PYTH_SOL_USD=H6ARHf6YXhGYeQfUzQNGk6rDNnLBQKrenN712K4AQJEG

# --------------------------------------------
# IPFS/Image Upload (Pinata)
# --------------------------------------------
# Get from: https://pinata.cloud
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt_token_here
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud

# --------------------------------------------
# Cloudflare R2 (Alternative Image Storage)
# --------------------------------------------
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=astra-images
NEXT_PUBLIC_R2_PUBLIC_URL=https://pub-yourhash.r2.dev

# --------------------------------------------
# Appwrite (Comments System)
# --------------------------------------------
# Get from: https://appwrite.io
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id
NEXT_PUBLIC_APPWRITE_DATABASE_ID=astra_db
NEXT_PUBLIC_APPWRITE_COMMENTS_COLLECTION_ID=comments
APPWRITE_API_KEY=your_api_key

# --------------------------------------------
# Helius (Webhooks & Enhanced RPC)
# --------------------------------------------
# Get from: https://helius.xyz
HELIUS_API_KEY=your_helius_api_key
HELIUS_WEBHOOK_SECRET=your_webhook_secret

# --------------------------------------------
# Cron Job Secret (For API Routes)
# --------------------------------------------
CRON_SECRET=your_random_secret_for_cron_jobs

# --------------------------------------------
# Fallback SOL Price (For Build/Testing)
# --------------------------------------------
# Used when Pyth feed is unavailable
FALLBACK_SOL_PRICE_USD=150.00

# --------------------------------------------
# Optional: Analytics & Monitoring
# --------------------------------------------
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# --------------------------------------------
# Optional: Feature Flags
# --------------------------------------------
# Enable test features
NEXT_PUBLIC_ENABLE_TESTNET=true

# Enable force graduate button (admin only)
NEXT_PUBLIC_ENABLE_FORCE_GRADUATE=false
